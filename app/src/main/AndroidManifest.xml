<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jucygo">

        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.ProductListActivity"
            android:exported="false"
            android:parentActivityName=".controller.MainActivity" />

        <activity
            android:name=".controller.AddProductActivity"
            android:exported="false"
            android:parentActivityName=".controller.ProductListActivity" />

        <activity
            android:name=".controller.EditProductActivity"
            android:exported="false"
            android:parentActivityName=".controller.ProductListActivity" />

        <activity
            android:name=".controller.AddSaleActivity"
            android:exported="false"
            android:parentActivityName=".controller.ProductListActivity" />

        <activity
            android:name=".controller.SalesHistoryActivity"
            android:exported="false"
            android:parentActivityName=".controller.ProductListActivity" />

        <activity
            android:name=".controller.AddOrderActivity"
            android:exported="false"
            android:parentActivityName=".controller.ProductListActivity" />

        <activity
            android:name=".controller.OrderHistoryActivity"
            android:exported="false"
            android:parentActivityName=".controller.ProductListActivity" />

        <!-- FileProvider for camera images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>