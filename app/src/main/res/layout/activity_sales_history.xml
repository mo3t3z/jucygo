<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Modern Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/purple_700"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sales_history_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:letterSpacing="0.02"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View and search all sales records"
                android:textSize="14sp"
                android:textColor="@color/purple_200"
                android:alpha="0.9" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Search Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/input_background_purple"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Sales"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchViewSales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="@string/search_hint"
                android:iconifiedByDefault="false"
                android:background="@color/input_background_teal"
                android:padding="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sales List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSales"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/no_sales_message"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/text_secondary"
        android:padding="48dp"
        android:lineSpacingMultiplier="1.4" />

</LinearLayout>
